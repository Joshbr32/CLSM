<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".InventoryActivity">

    <TextView
        android:id="@+id/form_storage_label"
        android:layout_width="500dp"
        android:layout_height="149dp"
        android:layout_marginStart="8dp"
        android:layout_marginBottom="4dp"
        android:text="@string/inventory_label"
        android:textSize="60sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/inventoryList"
        app:layout_constraintStart_toStartOf="@+id/inventoryList" />

    <Button
        android:id="@+id/add_object_button"
        android:layout_width="187dp"
        android:layout_height="97dp"
        android:layout_marginEnd="-300dp"
        android:layout_marginBottom="32dp"
        android:onClick="createItem"
        android:text="@string/inventory_add_item_button"
        app:layout_constraintBottom_toBottomOf="@+id/form_storage_label"
        app:layout_constraintEnd_toEndOf="@+id/inventoryList" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/inventoryList"
        android:layout_width="331dp"
        android:layout_height="482dp"
        android:layout_marginStart="50dp"
        android:layout_marginTop="200dp"
        android:layout_marginEnd="50dp"
        android:layout_marginBottom="50dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.397" />

</androidx.constraintlayout.widget.ConstraintLayout>