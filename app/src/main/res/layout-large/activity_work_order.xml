<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".WorkOrderActivity">

    <ImageView
        android:id="@+id/colonial_logo_main_menu"
        android:layout_width="365dp"
        android:layout_height="187dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/colonial" />

    <Spinner
        android:id="@+id/spinner"
        android:layout_width="273dp"
        android:layout_height="305dp"
        android:layout_marginTop="12dp"
        android:text="@string/site_list"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/colonial_logo_main_menu" />

    <EditText
        android:id="@+id/editTextTime4"
        android:layout_width="301dp"
        android:layout_height="53dp"
        android:layout_marginStart="7dp"
        android:layout_marginTop="44dp"
        android:ems="10"
        android:inputType="time"
        android:minHeight="48dp"
        android:text="@string/work_order_time_out"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/spinner"
        app:layout_constraintTop_toBottomOf="@+id/editTextTime3" />

    <ListView
        android:id="@+id/taskList"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="150dp"
        android:choiceMode="multipleChoice"
        app:layout_constraintBottom_toTopOf="@+id/commentsField"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/spinner"
        app:layout_constraintVertical_bias="0.577" />

    <EditText
        android:id="@+id/commentsField"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="132dp"
        android:text="@string/comments"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/taskList" />

    <EditText
        android:id="@+id/editTextTime3"
        android:layout_width="305dp"
        android:layout_height="61dp"
        android:layout_marginStart="7dp"
        android:layout_marginTop="44dp"
        android:ems="10"
        android:inputType="time"
        android:minHeight="48dp"
        android:text="@string/work_order_time_in"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/spinner"
        app:layout_constraintTop_toBottomOf="@+id/editTextDate2" />

    <EditText
        android:id="@+id/editTextDate2"
        android:layout_width="305dp"
        android:layout_height="56dp"
        android:layout_marginStart="3dp"
        android:layout_marginTop="12dp"
        android:ems="10"
        android:hint="mm/dd/yyyy"
        android:inputType="date"
        android:minHeight="48dp"
        android:text="@string/date"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.026"
        app:layout_constraintStart_toEndOf="@+id/spinner"
        app:layout_constraintTop_toBottomOf="@+id/colonial_logo_main_menu" />

</androidx.constraintlayout.widget.ConstraintLayout>