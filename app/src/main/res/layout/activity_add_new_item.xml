<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddInventoryItem">

    <EditText
        android:id="@+id/new_item_count_input"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:ems="10"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toBottomOf="@+id/new_item_count_label"
        app:layout_constraintEnd_toEndOf="@+id/add_item_button"
        app:layout_constraintStart_toEndOf="@+id/new_item_count_label" />

    <EditText
        android:id="@+id/new_item_description_input"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:ems="10"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toBottomOf="@+id/new_item_description_label"
        app:layout_constraintEnd_toEndOf="@+id/add_item_button"
        app:layout_constraintStart_toEndOf="@+id/new_item_description_label" />

    <TextView
        android:id="@+id/new_item_description_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginTop="50dp"
        android:text="@string/new_item_description"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="@+id/new_item_name_label"
        app:layout_constraintTop_toBottomOf="@+id/new_item_count_input" />

    <TextView
        android:id="@+id/new_item_count_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginTop="50dp"
        android:text="@string/new_item_count"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="@+id/new_item_name_label"
        app:layout_constraintTop_toBottomOf="@+id/new_item_name_input" />

    <TextView
        android:id="@+id/new_item_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="50dp"
        android:layout_marginTop="100dp"
        android:text="@string/new_item_label"
        android:textSize="48sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/add_item_button"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="48dp"
        android:onClick="createItem"
        android:text="@string/inventory_add_item_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/new_item_description_input" />

    <TextView
        android:id="@+id/new_item_name_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginTop="50dp"
        android:text="@string/new_item_name"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="@+id/new_item_label"
        app:layout_constraintTop_toBottomOf="@+id/new_item_label" />

    <EditText
        android:id="@+id/new_item_name_input"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:ems="10"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toBottomOf="@+id/new_item_name_label"
        app:layout_constraintEnd_toEndOf="@+id/add_item_button"
        app:layout_constraintStart_toEndOf="@+id/new_item_name_label" />


</androidx.constraintlayout.widget.ConstraintLayout>